<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black_dark"
    android:padding="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_8sdp"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_song"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/farm_animal"
        android:scaleType="fitXY"
        app:shapeAppearanceOverlay="@style/RoundedSquare"
        />


    <LinearLayout
        android:id="@+id/layout_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/image_song"
        app:layout_constraintTop_toTopOf="@id/image_song"
        app:layout_constraintBottom_toBottomOf="@id/image_song"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_15sdp"
        >

        <TextView
            android:id="@+id/text_songName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Painting Forest"
            android:textColor="@color/white"
            android:fontFamily="@font/alegreya_black"
            android:includeFontPadding="false"
            android:textSize="@dimen/_15sdp"
            />

        <TextView
            android:id="@+id/text_songListen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="895654 Listening"
            android:textColor="@color/white"
            android:includeFontPadding="false"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/text_songLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/layout_song"
        app:layout_constraintBottom_toBottomOf="@id/layout_song"
        android:layout_marginEnd="@dimen/_10sdp"
        android:text="20Min"
        android:fontFamily="@font/alegreya"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>