<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginStart="22dp"
    android:layout_marginEnd="22dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/image_item"
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:src="@drawable/image_test2"
        app:riv_corner_radius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout_details"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/image_item"
        app:layout_constraintTop_toTopOf="@id/image_item"
        app:layout_constraintBottom_toBottomOf="@id/image_item"
        >
        <TextView
            android:id="@+id/tv_SuitName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pant 01"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
             />


        <TextView
            android:id="@+id/tv_orderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order #1232"
            android:textColor="@color/colorSecondary"
           />

        <TextView
            android:id="@+id/tv_suitPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs. 300"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dueDate"
            android:text="Due on October 21, 2020"

            />

    </LinearLayout>



    <ImageView
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:id="@+id/image_option"
        android:src="@drawable/ic_baseline_more_vert_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_item"
        app:layout_constraintBottom_toBottomOf="@id/image_item"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorSecondary"
        app:layout_constraintTop_toBottomOf="@id/image_item"
        android:layout_marginTop="4dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>